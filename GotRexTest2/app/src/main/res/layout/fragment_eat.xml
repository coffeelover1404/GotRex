<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitchen"
    tools:context=".EatFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/babyEat"
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#3498db" />

        <ImageView
            android:id="@+id/food1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/food3"
            android:layout_marginStart="11dp"
            android:src="@drawable/hamburger" />

        <ImageView
            android:id="@+id/food2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/food1"
            android:src="@drawable/oatmeal" />

        <ImageView
            android:id="@+id/food3"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/food4"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/food2"
            android:src="@drawable/chic" />

        <ImageView
            android:id="@+id/food4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/food2"
            android:layout_alignEnd="@+id/babyEat"
            android:layout_marginEnd="54dp"
            android:src="@drawable/cake2" />

        <ImageView
            android:id="@+id/food5"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/babyEat"
            android:src="@drawable/milk" />

    </RelativeLayout>
</FrameLayout>