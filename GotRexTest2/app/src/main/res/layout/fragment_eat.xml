<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".EatFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/babyEat"
            android:layout_width="310dp"
            android:layout_height="280dp"
            android:layout_above="@+id/food1"
            android:layout_centerHorizontal="true"
            android:background="#3498db"
            android:contentDescription="@string/Baby" />

        <ImageView
            android:id="@+id/food1"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/food4"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:contentDescription="@string/Food1"
            android:src="@drawable/chic" />

        <ImageView
            android:id="@+id/food2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/food4"
            android:layout_toEndOf="@+id/food1"
            android:contentDescription="@string/Food2"
            android:src="@drawable/hamburger" />

        <ImageView
            android:id="@+id/food3"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_below="@+id/babyEat"
            android:layout_marginEnd="67dp"
            android:layout_toStartOf="@+id/food5"
            android:contentDescription="@string/Food3"
            android:src="@drawable/oatmeal" />

        <ImageView
            android:id="@+id/food4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/food5"
            android:contentDescription="@string/Food4"
            android:src="@drawable/cake2" />

        <ImageView
            android:id="@+id/food5"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/food1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:contentDescription="@string/Food5"
            android:src="@drawable/milk" />

    </RelativeLayout>
</FrameLayout>